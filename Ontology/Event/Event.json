      "name": "hasObservationTime",
      "schema": "dateTime",
      "writable": true
    },
    {
      "@type": ["Property", "TimeSpan"],
      "description": {
        "en": "Measured in ms (milliseconds). Duration is defined as the length of time that something lasts."
      },
      "displayName": {
        "en": "has duration"
      },
      "name": "hasDuration",
      "schema": "double",
      "unit": "millisecond",
      "writable": true
    },
